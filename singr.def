BootStrap: docker
From: ubuntu:jammy

%labels
    Author cole.brokamp@gmail.com
    R_VERSION 4.3.0

%runscript
/bin/bash

%environment
export R_VERSION=4.3.0

%post
export R_VERSION=4.3.0
export OS_IDENTIFIER=ubuntu-2204

# configure default locale
echo "en_US.UTF-8 UTF-8" >> /etc/locale.gen
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export TZ=UTC

# install some build dependencies and other essentials
apt-get update -qq && \
    DEBIAN_FRONTEND=noninteractive apt-get install -y \
    apt-transport-https \
    curl \
    fontconfig \
    git \
    libcurl4-openssl-dev \
    locales \
    perl \
    sudo \
    tzdata \
    wget && \
    rm -rf /var/lib/apt/lists/*

# install R
wget https://cdn.posit.co/r/${OS_IDENTIFIER}/pkgs/r-${R_VERSION}_1_amd64.deb && \
    apt-get update -qq && \
    DEBIAN_FRONTEND=noninteractive apt-get install -f -y ./r-${R_VERSION}_1_amd64.deb && \
    ln -s /opt/R/${R_VERSION}/bin/R /usr/bin/R && \
    ln -s /opt/R/${R_VERSION}/bin/Rscript /usr/bin/Rscript && \
    ln -s /opt/R/${R_VERSION}/lib/R /usr/lib/R && \
    rm r-${R_VERSION}_1_amd64.deb && \
    rm -rf /var/lib/apt/lists/*

# install geospatial system deps
    add-apt-repository ppa:ubuntugis/ubuntugis-unstable
    DEBIAN_FRONTEND=noninteractive apt-get install -yqq --no-install-recommends \
      libgdal-dev \
      gdal-bin \
      libgeos-dev \
      libgeos++-dev \
      libproj-dev \
      libudunits2-dev

# install aws-cli
    apt-get update
    DEBIAN_FRONTEND=noninteractive apt-get install -yqq --no-install-recommends \
        python3-pip \
        python3-setuptools
    pip3 install awscli --upgrade

# V8 deps
    DEBIAN_FRONTEND=noninteractive apt-get install -yqq --no-install-recommends \
      libnode-dev \

# clean up
    rm -rf /var/lib/apt/lists/*

%test
    R --version | grep -q "R version ${R_VERSION}"
    if [ $? -eq 0 ]; then
        echo "R version ${R_VERSION} is available."
    else
        echo "R not found."
    fi
